---
const {
  title = "Lorem Ipsum Dolor Sit Amet",
  items = [
    {
      icon: "fa-solid fa-bolt text-indigo-500 mt-1",
      text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
    },
    {
      icon: "fa-solid fa-arrows-rotate text-indigo-500 mt-1",
      text: "Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
    },
    {
      icon: "fa-solid fa-money-bill-trend-up text-indigo-500 mt-1",
      text: "Ut enim ad minim veniam, quis nostrud exercitation ullamco.",
    },
    {
      icon: "fa-solid fa-gauge-high text-indigo-500 mt-1",
      text: "Duis aute irure dolor in reprehenderit in voluptate velit esse.",
    },
    {
      icon: "fa-solid fa-lightbulb text-indigo-500 mt-1",
      text: "Excepteur sint occaecat cupidatat non proident, sunt in culpa.",
    },
  ],
  bgClass = "bg-gradient-to-r from-indigo-100 via-white to-cyan-100 rounded-2xl shadow-lg p-8",
} = Astro.props;
---

<section class="max-w-5xl mx-auto px-4 py-12">
  <div class={bgClass}>
    <h2 class="text-2xl font-bold text-indigo-700 mb-6">
      {title}
    </h2>
    <ul class="grid md:grid-cols-2 gap-4 text-gray-700 text-lg">
      {
        items.map(
          (
            item: { icon: string | null | undefined; text: unknown },
            idx: any,
          ) => (
            <li class="flex items-start gap-3">
              <i class={item.icon} />
              {item.text}
            </li>
          ),
        )
      }
    </ul>
  </div>
</section>
