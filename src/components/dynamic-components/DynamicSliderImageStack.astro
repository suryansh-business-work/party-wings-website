---
const { images = [] } = Astro.props;
---

<section class="relative">
  <div class="absolute inset-0 z-0 pointer-events-none"
       style="background: linear-gradient(135deg, #e0e7ff 0%, #f0fdfa 100%); opacity: 0.7;">
  </div>
  <div
    class="relative flex flex-wrap justify-center gap-4 md:gap-8 my-10 md:my-20 mt-10 md:mt-40"
  >
    {images.map((img: { src: string | null | undefined; alt: string | null | undefined; }, idx: number) => (
      <div
        class={`relative rounded-2xl overflow-hidden shadow-xl border-4 border-white transition-transform duration-300
          ${idx === 0 ? 'z-30 scale-110 md:-rotate-3' : ''}
          ${idx === 1 ? 'z-20 -ml-8 md:ml-0 md:-mt-10 md:rotate-2' : ''}
          ${idx === 2 ? 'z-10 -ml-8 md:ml-0 md:-mt-20 md:rotate-6' : ''}
          ${idx > 2 ? 'z-0 -ml-8 md:ml-0 md:-mt-24 md:rotate-0' : ''}
          w-40 h-56 md:w-56 md:h-80
        `}
        style={`left: ${idx * 0.5}rem`}
      >
        <img
          src={img.src}
          alt={img.alt}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    ))}
  </div>
</section>
