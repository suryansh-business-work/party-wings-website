---
const {
  title = "Our Business Tools",
  images = [
    { src: "https://static.cdnlogo.com/logos/m/6/microsoft.svg", alt: "Microsoft" },
    { src: "https://static.cdnlogo.com/logos/i/92/ibm.svg", alt: "IBM" },
    { src: "https://static.cdnlogo.com/logos/g/94/google-cloud.svg", alt: "Google" },
    { src: "https://static.cdnlogo.com/logos/a/19/aws.svg", alt: "AWS" }
  ]
} = Astro.props;
---

<section class="p-20">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-2xl font-bold text-gray-800 mb-8">{title}</h2>
    <div class="flex flex-wrap justify-center items-center gap-8">
      {images.map((img: { src: string | null | undefined; alt: string | null | undefined; }) => (
        <img
          src={img.src}
          alt={img.alt}
          class="h-10"
        />
      ))}
    </div>
  </div>
</section>
