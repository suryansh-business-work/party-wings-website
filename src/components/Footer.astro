---
const company = [
  { text: "About us", href: "/about" },
  { text: "Careers", href: "/careers" },
  { text: "Earn from Party Wings", href: "/earn-from-party-wings" },
  { text: "Register yourself as Vendor", href: "/vender-registration" },
  { text: "Contact", href: "/contact" },
];

const planning = [
  { text: "Guest Management", href: "/tools/guest-management" },
  { text: "Todos", href: "/tools/todos" },
];

const more = [
  { text: "Blog", href: "/blog" },
  { text: "Gallery", href: "/gallery" },
  { text: "FAQ", href: "/faq" },
];

const login = [
  { text: "Customer Login", href: "/customer-login" },
  { text: "Vendor Login", href: "/vendor-login" },
];

const social = [
  { icon: "fab fa-facebook-f", href: "https://facebook.com" },
  { icon: "fab fa-instagram", href: "https://instagram.com" },
  { icon: "fab fa-x-twitter", href: "https://twitter.com" },
  { icon: "fab fa-pinterest", href: "https://pinterest.com" },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-white dark:bg-slate-900 text-slate-700 dark:text-slate-300">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-3 col-lg-3 mb-5">
          <div class="space-y-3">
            <h3
              class="text-sm font-semibold text-slate-900 dark:text-slate-100"
            >
              Company
            </h3>
            <ul class="space-y-2 text-sm">
              {
                company.map((item) => (
                  <li>
                    <a href={item.href} class="hover:text-amber-500">
                      {item.text}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div class="col-12 col-md-3 col-lg-2 mb-5">
          <div class="space-y-3">
            <h3
              class="text-sm font-semibold text-slate-900 dark:text-slate-100"
            >
              Planning tools
            </h3>
            <ul class="space-y-2 text-sm">
              {
                planning.map((item) => (
                  <li>
                    <a href={item.href} class="hover:text-amber-500">
                      {item.text}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div class="col-12 col-md-3 col-lg-2 mb-5">
          <div class="space-y-3">
            <h3
              class="text-sm font-semibold text-slate-900 dark:text-slate-100"
            >
              More
            </h3>
            <ul class="space-y-2 text-sm">
              {
                more.map((item) => (
                  <li>
                    <a href={item.href} class="hover:text-amber-500">
                      {item.text}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div class="col-12 col-md-3 col-lg-2 mb-5">
          <h3 class="text-sm font-semibold text-slate-900 dark:text-slate-100">
            Login
          </h3>
          <nav aria-label="Login" class="mt-3">
            <ul class="space-y-2 text-sm">
              {
                login.map((item) => (
                  <li>
                    <a href={item.href}>
                      {item.text}
                    </a>
                  </li>
                ))
              }
            </ul>
          </nav>
        </div>
        <div class="col-12 col-md-12 col-lg-3 mb-5">
          <div class="space-y-4">
            <div class="flex items-center gap-3 mb-5">
              <div>
                <div
                  class="text-sm font-semibold text-slate-900 dark:text-slate-100"
                >
                  Party Wings
                </div>
                <div class="text-xs text-slate-500 dark:text-slate-400">
                  Delighting hosts with vibrant parties
                </div>
              </div>
            </div>
            <div>
              <h4 class="text-sm font-semibold mb-2">Follow us</h4>
              <div class="flex gap-3">
                {
                  social.map((s) => (
                    <a
                      href={s.href}
                      class="w-8 h-8 flex items-center justify-center rounded-full bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-200 hover:bg-amber-500 hover:text-white transition"
                    >
                      <i class={s.icon} aria-hidden="true" />
                      <span class="sr-only">Open social</span>
                    </a>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <section class="py-6 bg-gray-100 text-gray-900">
    <div
      class="container mx-auto flex flex-col justify-around p-4 text-center md:p-10 lg:flex-row"
    >
      <div class="flex flex-col justify-center lg:text-left">
        <p
          class="mb-1 text-sm font-medium tracking-widest uppercase text-gray-600"
        >
          Party Wings App - <b>Coming Soon</b>
        </p>
        <h1 class="py-2 text-3xl font-medium leading-tight title-font">
          Party Wings
        </h1>
      </div>
      <div
        class="flex flex-col items-center justify-center flex-shrink-0 mt-6 space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4 lg:ml-4 lg:mt-0 lg:justify-end"
      >
