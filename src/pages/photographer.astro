import Page from "../layouts/Page.astro";
const gallery = [
  // Birthday photos
  "https://images.unsplash.com/photo-1524504388940-b1c1722653e1?auto=format&fit=crop&w=1400&q=80", // kids party with balloons
  "https://images.unsplash.com/photo-1532634896-26909d0dca9b?auto=format&fit=crop&w=1400&q=80", // birthday cake closeup
  "https://images.unsplash.com/photo-1533777324565-a040eb52fac2?auto=format&fit=crop&w=1400&q=80", // guests celebrating
  "https://images.unsplash.com/photo-1546435770-a3e426bf472b?auto=format&fit=crop&w=1400&q=80", // decorations and balloons

  // Wedding photos
  "https://images.unsplash.com/photo-1524504388940-65c2f0b3a8b6?auto=format&fit=crop&w=1400&q=80", // wedding couple portrait
  "https://images.unsplash.com/photo-1506905925346-21bda4d2b7f8?auto=format&fit=crop&w=1400&q=80", // reception tables and lights
  "https://images.unsplash.com/photo-1519681393784-d120267933ba?auto=format&fit=crop&w=1400&q=80", // candid wedding moment
  "https://images.unsplash.com/photo-1487412947147-5cebf100ffc2?auto=format&fit=crop&w=1400&q=80", // wedding dance / celebration
  "https://images.unsplash.com/photo-1518609878373-06d740f60d8b?auto=format&fit=crop&w=1400&q=80", // wedding floral detail
];
---
<Page
  title="Photography Services | Party Wings"
  description="Professional event & party photography by Party Wings — packages, portfolio and booking."
  pageUrl="/photographer"
>
  <main class="min-h-screen bg-gradient-to-b from-indigo-50 to-white pt-24 pb-16">
    <!-- Hero -->
    <section class="max-w-6xl mx-auto px-4 text-center">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-[#2e1163]">Event & Party Photography</h1>
      <p class="mt-4 text-lg text-slate-600 max-w-3xl mx-auto">
        Capture every smile, toast and candid moment. Our photographers blend documentary style with creative portraits to tell your event's story.
      </p>
      <div class="mt-6 flex justify-center gap-3">
        <a href="#packages" class="inline-flex items-center px-5 py-3 bg-amber-500 text-white rounded-md shadow hover:bg-amber-600">View Packages</a>
        <a href="#contact" class="inline-flex items-center px-5 py-3 border border-amber-500 text-amber-600 rounded-md hover:bg-amber-50">Get a Quote</a>
      </div>
    </section>

    <!-- Packages -->
    <section id="packages" class="max-w-6xl mx-auto px-4 mt-12">
      <h2 class="text-2xl font-bold text-slate-800">Photography Packages</h2>
      <p class="text-sm text-slate-500 mt-2">Flexible packages for parties, weddings, corporate events and kids' birthdays.</p>

      <div class="mt-6 grid gap-6 grid-cols-1 md:grid-cols-3">
        <div class="border rounded-lg p-6 bg-white shadow-sm">
          <h3 class="text-lg font-semibold text-slate-800">Basic — Highlights</h3>
          <p class="text-sm text-slate-500 mt-2">2 hours coverage, 50 edited photos, online gallery delivery.</p>
          <div class="mt-4 font-bold text-lg">₹8,000</div>
          <a href="#contact" class="mt-4 inline-block px-4 py-2 bg-[#2e1163] text-white rounded">Book</a>
        </div>

        <div class="border rounded-lg p-6 bg-white shadow-md transform scale-100 md:scale-105">
          <h3 class="text-lg font-semibold text-slate-800">Standard — Full Event</h3>
          <p class="text-sm text-slate-500 mt-2">4 hours coverage, 150 edited photos, 2 photographers, online gallery + prints option.</p>
          <div class="mt-4 font-bold text-lg">₹18,000</div>
          <a href="#contact" class="mt-4 inline-block px-4 py-2 bg-[#2e1163] text-white rounded">Book</a>
        </div>

        <div class="border rounded-lg p-6 bg-white shadow-sm">
          <h3 class="text-lg font-semibold text-slate-800">Premium — Comprehensive</h3>
          <p class="text-sm text-slate-500 mt-2">Full-day coverage, editorial edits, album design, drone shots (where permitted).</p>
          <div class="mt-4 font-bold text-lg">₹35,000</div>
          <a href="#contact" class="mt-4 inline-block px-4 py-2 bg-[#2e1163] text-white rounded">Book</a>
        </div>
      </div>
    </section>

    <!-- Portfolio -->
    <section class="max-w-6xl mx-auto px-4 mt-12">
      <h2 class="text-2xl font-bold text-slate-800">Portfolio</h2>
      <p class="text-sm text-slate-500 mt-2">A selection of recent birthday and wedding events we've shot.</p>

      <div class="mt-6 grid grid-cols-2 sm:grid-cols-3 gap-4">
        {gallery.map((src) => (
          <figure class="overflow-hidden rounded-lg bg-white shadow-sm">
            <img src={src} alt="Event photo" class="w-full h-48 object-cover transition-transform duration-300 hover:scale-105" />
          </figure>
        ))}
      </div>
    </section>

    <!-- Why choose us -->
    <section class="max-w-6xl mx-auto px-4 mt-12">
      <h2 class="text-2xl font-bold text-slate-800">Why Party Wings Photography</h2>
      <ul class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm text-slate-600">
        <li class="flex gap-3 items-start">
          <span class="text-amber-500 mt-1">●</span>
          <span><strong>Experienced team</strong> — photographers skilled at candid and posed shots.</span>
        </li>
        <li class="flex gap-3 items-start">
          <span class="text-amber-500 mt-1">●</span>
          <span><strong>Fast delivery</strong> — initial gallery within 7 days, full edits in 2–3 weeks.</span>
        </li>
        <li class="flex gap-3 items-start">
          <span class="text-amber-500 mt-1">●</span>
          <span><strong>Flexible add-ons</strong> — albums, prints, drone coverage and extra photographers.</span>
        </li>
        <li class="flex gap-3 items-start">
          <span class="text-amber-500 mt-1">●</span>
          <span><strong>Trusted at events</strong> — discreet coverage that captures real moments.</span>
        </li>
      </ul>
    </section>

    <!-- FAQs -->
    <section class="max-w-6xl mx-auto px-4 mt-12">
      <h2 class="text-2xl font-bold text-slate-800">Frequently Asked Questions</h2>
      <div class="mt-4 space-y-3 text-sm text-slate-600">
        <details class="p-4 bg-white border rounded-md">
          <summary class="font-medium cursor-pointer">How long until we get the photos?</summary>
          <div class="mt-2">Initial gallery delivered within 7 days. Final edited photos delivered within 2–3 weeks depending on package.</div>
        </details>

        <details class="p-4 bg-white border rounded-md">
          <summary class="font-medium cursor-pointer">Can we request specific shots?</summary>
          <div class="mt-2">Yes — tell us your must-have shots when booking and we’ll create a simple shot list.</div>
        </details>

        <details class="p-4 bg-white border rounded-md">
          <summary class="font-medium cursor-pointer">Do you provide prints or albums?</summary>
          <div class="mt-2">Yes — albums and print packages are available as add-ons. We'll help with layout and finish options.</div>
        </details>
      </div>
    </section>
  </main>
</Page>