---
import Page from "../layouts/Page.astro";
import VendorRegistration from "../components/react/VendorRegistration";
---

<Page
  title="Vendor Registration | Party Wings"
  description="Register as an event vendor with Party Wings - catering, decor, photography and more."
  pageUrl="/vender-registration"
>
  <main class="min-h-screen bg-gradient-to-b from-amber-50 to-white py-12 px-4">
    <section class="max-w-7xl mx-auto grid md:grid-cols-2 gap-8 items-center">
      <div>
        <div class="bg-white rounded-2xl shadow-md p-6">
          <div class="flex items-center gap-3 mb-4">
            <div>
              <h1 class="text-xl font-bold">
                Event Vendor Registration â€“ Partner with Us
              </h1>
              <p class="text-sm text-gray-500">
                Join our network of trusted vendors across India.
              </p>
            </div>
          </div>

          <VendorRegistration client:load />

          <div class="mt-4 text-xs text-gray-500">
            By registering you agree to our <a
              href="/policies/terms"
              class="text-amber-600 hover:underline">Terms</a
            > and <a
              href="/policies/privacy"
              class="text-amber-600 hover:underline">Privacy Policy</a
            >.
          </div>
        </div>

        <footer class="mt-4 text-sm text-gray-600">
          <div class="flex gap-4">
            <a href="/policies/terms" class="hover:underline">Terms</a>
            <a href="/policies/privacy" class="hover:underline">Privacy</a>
            <a href="/contact" class="hover:underline">Contact Support</a>
          </div>
        </footer>
      </div>
    </section>
  </main>
</Page>
