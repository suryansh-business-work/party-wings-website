---
import VendorLoginComponent from "../components/forms/vendor-forms/vendor-login";
import Page from "../layouts/Page.astro";
---

<Page
  title="Vendor Login | Party Wings"
  description="Vendor login - access your vendor dashboard using phone OTP."
  pageUrl="/vendor-login"
>
  <main class="min-h-screen bg-gradient-to-b from-amber-50 to-white py-12">
    <section class="container">
      <div class="row">
        <div class="col-12 col-md-6">
          <div class="mb-4">
            <h1>Vendor Login</h1>
            <p>Login with your registered phone using OTP.</p>
          </div>
          <VendorLoginComponent client:load />

          <div class="mt-3 mb-3">
            <p class="text-xs text-muted mb-1 text-[#5d5d5d]">By logging in you accept all of the following policies:</p>
            <p class="text-xs text-muted">
              <a href="/policies/terms-and-conditions" class="me-2 text-muted text-decoration-none">Terms and Conditions</a>
              |
              <a href="/policies/privacy" class="mx-2 text-muted text-decoration-none">Data Policy</a>
              |
              <a href="/policies/privacy" class="ms-2 text-muted text-decoration-none">Privacy Policy</a>
            </p>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div style="min-height:420px; height:100%;">
            <img
              src="https://images.pexels.com/photos/4098992/pexels-photo-4098992.jpeg"
              alt="Party setup"
              class="img-fluid w-100"
              style="object-fit:cover; height:100%; min-height:420px;"
            />
          </div>
        </div>
      </div>
    </section>
  </main>
</Page>
